{
  "version": 4,
  "configurations": [
    {
      "name": "WSL-GCC",
      // this must be the real Linux gcc inside WSL
      "compilerPath": "/usr/bin/gcc",
      // match your GCC target (check `gcc -v`)
      "intelliSenseMode": "linux-gcc-x64",
      "includePath": [
        "${workspaceFolder}/**",                // your project
        "/usr/include",                         // core headers
        "/usr/include/x86_64-linux-gnu",        // distro-specific
        "/usr/local/include"                    // any extra
      ],
      "defines": [],
      "cStandard": "gnu17",
      "cppStandard": "gnu++17",
      "browse": {
        "path": [
          "${workspaceFolder}",
          "/usr/include",
          "/usr/include/x86_64-linux-gnu"
        ]
      }
    }
  ]
}